
    <div>
        <form class="formulario" >
        <h1>Agregar un producto</h1>
        <label>Titulo: <input type="text" id="title" required></label>
        <label>Precio: <input type="number" id="price" required></label>
        <label>Url: <input type="text" id="url" required></label>
        <button type="button" id="btn-product" class="btn">Subir</button>
    </form>

    <h1>Productos</h1>
        <div class="container-products" id="products"></div>

    <h1>Centro de mensajes</h1>
        <div class="container-chat" >
            <input placeholder="Email" type="email" id="email" required>
            <div id="chat"></div>
            <div>
                <input placeholder="Ingresa un mensaje..." type="text" id="message" required>
                <button type="button" id="btn-chat" class="btn">Enviar</button>
            </div>
        </div>
    </div>
